	CAnimation Alert[2],Walk[2],Stab[2];
	CMovingBitmap Jump[2],BeHit;

	bool isMovingDown;			// 是否正在往下移動
	bool isMovingLeft;			// 是否正在往左移動
	bool isMovingRight;			// 是否正在往右移動
	bool isMovingUp;			//是否正在往上移動
	bool isMovingAttack; 
	bool isOnsky;
	
	int x,y,last_x,last_y,down_y;//座標
	int HP,superTime,countBeHit;  //countBeHit拿來倒數用(計算給電腦知道倒數的秒數),superTime為固定,用來算出給我們人在玩的時候看的閃爍秒數

	bool is_alive,isLeft,beHit;	
	
	int init_Velocity,init_downVelocity;	// 初始速度
	int Velocity,downVelocity;			// 目前的速度(點/次)

};
